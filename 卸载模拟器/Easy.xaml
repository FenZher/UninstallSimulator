<Page x:Class="卸载模拟器.Easy"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:卸载模拟器"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="简单">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="确定要卸载吗？" Grid.Row="0" FontWeight="Normal" FontSize="36" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="cancelButton" Content="取消卸载" Grid.Column="0" FontSize="24" Click="cancelButton_Click" />
            <Button x:Name="continueButton" Content="忍痛卸载" Grid.Column="1" FontSize="24" Click="continueButton_Click" />
        </Grid>
    </Grid>
</Page>